<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#E0D2F8"

    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="-20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/model4p" />


    </RelativeLayout>


    <io.github.florent37.shapeofview.shapes.ArcView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        app:shape_arc_height="50dp"
        app:shape_arc_position="top"
        android:id="@+id/line2"
        android:layout_below="@+id/relative2"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="Ready to find "
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="a Course"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/a_handful_of_model_sentence"
                android:textColor="#a3a3a3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/structure_s_too_generate_lorem_which"
                android:textColor="#a3a3a3"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans"
                android:text="@string/looks_reason_able"
                android:textColor="#a3a3a3"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/arrowbg"
                android:padding="10dp"
                android:src="@drawable/forwradar" />

        </LinearLayout>

    </io.github.florent37.shapeofview.shapes.ArcView>




</RelativeLayout>